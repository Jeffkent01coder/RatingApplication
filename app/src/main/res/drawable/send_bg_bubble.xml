<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="500">
    <!-- sets a bubble behavior on the button(or wherever used) when presses-->

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#51707070" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#03FFFFFF" />
            <corners android:radius="30dp" />
        </shape>
    </item>

</selector>